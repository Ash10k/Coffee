<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ash.coffee.MainActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:background="@drawable/necof"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breakfast"
            android:textColor="#fff"
            android:layout_centerInParent="true"
            android:textSize="50sp"
            android:id="@+id/breakfast"

            />

        <TextView
            android:background="#FFF"
            android:layout_height="1dp"
            android:layout_width="195dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="60dp"
            android:layout_below="@+id/breakfast"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:background="@drawable/coffee_cooking_vapor_113901_1600x900"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="With Us"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_marginTop="52dp"
            android:layout_marginLeft="80dp"
            android:textSize="50sp"
            android:layout_centerInParent="true"
            android:id="@+id/middle"/>


        <TextView
            android:background="#FFF"
            android:layout_height="1dp"
            android:layout_width="200dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/middle"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/beans"
            android:id="@+id/last_img"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="r e c o n n o i t r e"
            android:background="#80000000"
            android:textSize="20dp"
            android:textColor="#fff"
            android:id="@+id/Drawer"
            android:layout_centerInParent="true"/>



    </RelativeLayout>
</LinearLayout>
